<div class="container watchtime-container">
	<span>Додати сеанс</span>
	<a asp-area="" asp-controller="Padmin" asp-action="AdminView">
		<span class="close">
			<svg viewBox="0 0 24 24" width="24" height="24">
				<line x1="0" y1="0" x2="24" y2="24" stroke="white" stroke-width="5" />
				<line x1="24" y1="0" x2="0" y2="24" stroke="white" stroke-width="5" />
			</svg>
	</a>
	</span>
	<form>
		<div class="search-bar">
			<input type="text" placeholder="Введіть назву фільму...">
		</div>
		<div class="movie-list">
			@foreach (var movie in Model.Movie.Movies)
			{
				<div class="movie-item">
					<li style="background-image: url('@Url.Content("~/img_posters/" + movie.Title.Replace(":","") + "/" + movie.Title.Replace(":","") + "_SP.jpg")');"></li>
						<div class="movie-info">
						<div class="title">@movie.Title</div>
						@foreach (var genre in movie.MovieGenres)
						{
						<div class="details">@genre.Genre.Title</div>
						}
						<div class="rating">@movie.Rating ⭐️</div>
					</div>
				</div>
			}
		</div>
		<div class="hall">
			<span>Зала</span>
			<div>
				<button class="red" data-id="1">Red</button>
				<button class="green active" data-id="2">Green</button>
				<button class="blue" data-id="3">Blue</button>
			</div>
		</div>

		<div class="date">
			<span>Дата</span>
			<div>
				<select id="dateSelect">
					<!-- Элементы списка будут добавлены программно -->
				</select>
			</div>
		</div>
		<div class="time">
			<span>Час</span>
			<div>
				<button class="active" data-id"9">9:00</button>
				<button data-id"10">10:00</button>
				<button data-id"11">11:00</button>
				<button data-id"12">12:00</button>
				<button data-id"13">13:00</button>
				<button data-id"14">14:00</button>
				<button data-id"15">15:00</button>
				<button data-id"16">16:00</button>
				<button data-id"17">17:00</button>
				<button data-id"18">18:00</button>
				<button data-id"19">19:00</button>
				<button data-id"20">20:00</button>
				<button data-id"21">21:00</button>
			</div>
		</div>
		<input type="submit" class="add-watchtime-btn" value="Додати сеанс">
	</form>
</div>
	</main>


