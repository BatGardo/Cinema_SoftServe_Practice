@using Cinema_Project.ViewModels
@model RegisterVM


@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/auth-style.css">
</head>


<div class="container">
    <div class="row">
        <div class="auth-reg-container col-lg-6">
            <form asp-action="Register" method="post" class="auth-container">
                <div class="auth-caption">Реєстрація <span style="color:#DF0A0A">UP</span></div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Email" placeholder="Email" required />
                <input asp-for="UserName" placeholder="Логін" required />
                <input asp-for="Password" placeholder="Пароль" required />
                <input asp-for="ConfirmPassword" placeholder="Підтвердження паролю" required />
                <a asp-action="Login" class="text-decoration-none float-start mt-2" style="color:#DF0A0A"> Вже є акаунт? Авторизація</a>
                <input type="submit" value="Реєстрація" class="btn btn-primary btn-sm float-end" />
            </form>
        </div>
        <div class="col-lg-6 guest-container auth-caption ">Залишитися як <a asp-controller="Home" asp-action="Index"><span class="red-text-big">Гість</span></a></div>
    </div>
</div>

